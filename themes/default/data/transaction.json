{
    "dashboard": {
        "panels": [
            {
                "id": "welcome-message",
                "css": "col-md-12 ribbon",
                "body": {
                    "func": "bootstrap",
                    "type": "jumbotrons",
                    "objects": [
                        {
                            "title": "Transaction ID: {{vars.txid}}",
                            "intro": "This information about the transaction comes from the blockchain, not the device.",
                            "html": "Not sure what to put here - if anything at all ...?",
                            "buttons": [
                                {
                                    "href": "#",
                                    "css": "btn-danger btn-reset-device",
                                    "text": "Reset Device"
                                },
                                {
                                    "href": "#",
                                    "css": "btn-default",
                                    "text": "Backup",
                                    "attributes": [
                                        {
                                            "key": "data-toggle",
                                            "value": "modal"
                                        },
                                        {
                                            "key": "data-target",
                                            "value": "#backup-modal"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            },
            {
                "id": "tx-data",
                "css": "col-md-6 odd",
                "header": "Transaction Data",
                "body": {
                    "func": "bootstrap",
                    "type": "lists",
                    "objects": [
                        {
                            "items": [
                                {
                                    "html": "Size",
                                    "buttons": [
                                        {
                                            "css": "btn-xs disabled pull-right",
                                            "text": "{{tx.size}}"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            },
            {
                "id": "tx-amounts",
                "css": "col-md-6 even",
                "header": "Transaction Amounts",
                "body": {
                    "func": "bootstrap",
                    "type": "lists",
                    "objects": [
                        {
                            "items": [
                                {
                                    "html": "Total Input",
                                    "buttons": [
                                        {
                                            "css": "btn-xs disabled pull-right",
                                            "text": "{{tx.input}}"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        ]
    }
}